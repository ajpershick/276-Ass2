<p id="notice"><%= notice %></p>

<p>
  <strong>Course:</strong>
  <%= @course.course_id %>
</p>

<p>
  <strong>Description:</strong>
  <%= @course.description %>
</p>

<table>
  <thead>
  <tr>
    <th>Student id</th>
    <th>Percentage</th>
    <th>Lettergrade</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @enrolls.each do |enroll| %>
      <tr>
        <td><%= enroll.student_id %></td>
        <td><%= enroll.percentage %></td>
        <td><%= enroll.lettergrade %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %> |
